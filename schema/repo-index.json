{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/ibm/case/master/schema/root.json",
  "type": "object",
  "title": "The 'Repository Index Schema' for a CASE repository",
  "required": [
    "apiVersion",
    "entries"
  ],
  "properties": {
    "apiVersion" : {
      "$id": "#/properties/apiVersion",
      "type": "string",
      "title": "The api version of the 'Repository Index Schema'.",
      "default": "",
      "examples": [
        "1.0.0"
      ],
      "pattern": "^(.*)$"
    },
    "entries": {
      "$id": "#/properties/entries",
      "type": "object",
      "title": "The Entries definitions",
      "additionalProperties": false,
      "patternProperties": {
        "^[a-z_$-][A-Za-z0-9_$-]{0,49}$": {
          "title": "A CASE name",
          "required": [
            "latestAppVersion",
            "latestVersion"
          ],
          "properties": {
            "latestAppVersion": {
              "$id": "#/properties/entries/latestAppVersion",
              "type": "string",
              "title": "The app version associated with the latest version of the CASE.",
              "default": "",
              "examples": [
                "1.0.0"
              ],
              "pattern": "^(.*)$"
            },
            "latestVersion": {
              "$id": "#/properties/entries/latestVersion",
              "type": "string",
              "title": "The latest version of the specified CASE.",
              "default": "",
              "examples": [
                "1.0.0"
              ],
              "pattern": "^(.*)$"
            },
            "latestAppSemver": {
              "$id": "#/properties/entries/latestAppSemver",
              "type": "string",
              "title": "The latest semver application version of the specified CASE.",
              "default": "",
              "examples": [
                "1.0.0"
              ],
              "pattern": "^(.*)$"
            }
          }
        }
      }
    }
  }
}
